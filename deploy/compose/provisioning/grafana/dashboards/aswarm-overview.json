{
  "dashboard": {
    "id": null,
    "uid": "aswarm-overview",
    "title": "A-SWARM Pilot Overview",
    "description": "High-level overview of A-SWARM autonomous system health",
    "tags": ["aswarm", "pilot", "overview"],
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "10s",
    "version": 1,
    "templating": {
      "list": [
        {
          "name": "job",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=~\"^aswarm.*$\"}, job)",
          "current": { "text": "All", "value": ".*" },
          "includeAll": true,
          "multi": true,
          "refresh": 1
        },
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=~\"^aswarm.*$\"}, service)",
          "current": { "text": "All", "value": ".*" },
          "includeAll": true,
          "multi": true,
          "refresh": 1
        }
      ]
    },
    "links": [
      { "title": "Mission Control", "url": "http://localhost:8000", "targetBlank": true, "type": "link" },
      { "title": "Prometheus", "url": "http://localhost:9090", "targetBlank": true, "type": "link" }
    ],
    "panels": [
      {
        "id": 1,
        "title": "System Availability",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "(aswarm:targets_up_ratio_global or vector(0)) * 100",
            "legendFormat": "Overall Availability",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "aswarm_evolution_circuit_breaker_active",
            "legendFormat": "Circuit Breaker",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "OK (Disabled)", "color": "green"}}},
              {"type": "value", "options": {"1": {"text": "TRIPPED (Enabled)", "color": "red"}}}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 6,
        "title": "Alerts Firing",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"}) or vector(0)",
            "legendFormat": "Active Alerts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "values": false
          }
        }
      },
      {
        "id": 8,
        "title": "Autonomous Promotion Rate (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "(sum(increase(aswarm_promotions_triggered_total[24h])) / sum(increase(aswarm_evolution_cycles_total[24h])) or vector(0)) * 100",
            "legendFormat": "Promotion Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 20}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      },
      {
        "id": 3,
        "title": "Learning Events (Rate)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (event_type)(rate(aswarm_learning_events_total{job=~\"$job\"}[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 7,
        "title": "Evolution Cycles/min",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(aswarm_evolution_cycles_total{job=~\"$job\"}[5m]) * 60",
            "legendFormat": "Cycles/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "horizontal"
        }
      },
      {
        "id": 9,
        "title": "Evolution Best Fitness",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "aswarm_evolution_best_fitness{job=~\"$job\"}",
            "legendFormat": "Best Fitness",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.7}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "title": "Service Health",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "up{job=~\"$job\", service=~\"$service\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Event Queue Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "aswarm_event_queue_size{job=~\"$job\"}",
            "legendFormat": "Queue Size",
            "refId": "A"
          },
          {
            "expr": "aswarm_event_queue_age_seconds{job=~\"$job\"}",
            "legendFormat": "Queue Age (s)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Queue Age (s)"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}